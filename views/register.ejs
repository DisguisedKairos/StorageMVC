<%- include("partials/header", { title: "Register" }) %>
<!-- Theme toggle (works on auth pages too) -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 3000;">
  <button id="themeToggle" type="button" class="btn btn-outline-light btn-sm" style="border-radius: 20px; padding: 8px 18px;">üåô Dark Mode</button>
</div>


<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: hidden;
    background: url('/images/log-inBG.png') no-repeat center center fixed;
    background-size: cover;
  }
  
  .auth-container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    min-height: 100vh;
    width: 100%;
    padding-right: 80px;
    position: relative;
  }
  
  .logo-section {
    position: absolute;
    top: 40px;
    left: 40px;
    z-index: 10;
  }
  
  .logo-section h2 {
    color: #ffffff;
    font-size: 28px;
    font-weight: 700;
    margin: 0;
    text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
  }
  
  .auth-card {
    background: rgba(30, 35, 45, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    padding: 50px 45px;
    width: 100%;
    max-width: 480px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(100, 255, 100, 0.3);
    border: 2px solid transparent;
    background-clip: padding-box;
    position: relative;
  }
  
  .auth-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 2px;
    background: linear-gradient(135deg, rgba(100, 255, 100, 0.4), rgba(255, 200, 50, 0.4));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }
  
  .auth-card h1 {
    font-size: 28px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .auth-card .subtitle {
    color: #a0a0a0;
    font-size: 13px;
    margin-bottom: 30px;
    text-align: center;
  }
  
  .input-group-custom {
    margin-bottom: 18px;
  }
  
  .input-group-custom label {
    display: block;
    font-size: 13px;
    color: #c0c0c0;
    margin-bottom: 8px;
    font-weight: 500;
  }
  
  .input-with-icon {
    position: relative;
  }
  
  .input-with-icon i {
    position: absolute;
    left: 18px;
    top: 50%;
    transform: translateY(-50%);
    color: #808080;
    font-size: 16px;
  }
  
  .input-with-icon input,
  .input-with-icon select {
    width: 100%;
    padding: 15px 20px 15px 48px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 25px;
    font-size: 14px;
    transition: all 0.3s;
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
  }
  
  .input-with-icon input::placeholder,
  .input-with-icon select option {
    color: #808080;
  }
  
  .input-with-icon select {
    appearance: none;
    cursor: pointer;
  }
  
  .input-with-icon input:focus,
  .input-with-icon select:focus {
    outline: none;
    border-color: rgba(180, 255, 100, 0.6);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 3px rgba(180, 255, 100, 0.1);
  }
  
  .row-custom {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }
  
  .btn-register {
    width: 100%;
    padding: 15px;
    background: linear-gradient(90deg, #ffcc00 0%, #b8ff33 100%);
    border: none;
    border-radius: 25px;
    color: #1a1a1a;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 4px 20px rgba(255, 204, 0, 0.4);
    margin-top: 10px;
    margin-bottom: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .btn-register:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(255, 204, 0, 0.6);
  }
  
  .login-link {
    text-align: center;
  }
  
  .login-link a {
    color: #ffcc00;
    text-decoration: none;
    font-weight: 500;
  }
  
  .login-link a:hover {
    color: #b8ff33;
    text-decoration: underline;
  }
  
  .form-note {
    font-size: 11px;
    color: #808080;
    margin-top: 5px;
  }
  
  @media (max-width: 768px) {
    .auth-container {
      flex-direction: column;
    }
    .auth-left {
      min-height: 200px;
    }
    .logo-section {
      top: 20px;
      left: 20px;
    }
    .row-custom {
      grid-template-columns: 1fr;
    }
  }


  /* ===== Light/Dark mode improvements for auth pages ===== */
  body:not(.dark-mode) .auth-card {
    background: rgba(255, 255, 255, 0.92);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(15, 100, 51, 0.18);
  }
  body:not(.dark-mode) .auth-card h1 { color: #0f6433; }
  body:not(.dark-mode) .auth-card .subtitle { color: #475569; }
  body:not(.dark-mode) .input-group-custom label { color: #334155; }
  body:not(.dark-mode) .remember-me { color: #334155; }
  body:not(.dark-mode) .forgot-link { color: #0f6433; }
  body:not(.dark-mode) .input-with-icon i { color: #64748b; }
  body:not(.dark-mode) .input-with-icon input {
    background: rgba(255, 255, 255, 0.85);
    color: #0f172a;
    border-color: rgba(15, 100, 51, 0.25);
  }
  body:not(.dark-mode) .input-with-icon input::placeholder { color: #64748b; }
  body:not(.dark-mode) .btn-login,
  body:not(.dark-mode) .btn-register {
    background: linear-gradient(135deg, rgba(15, 100, 51, 0.95), rgba(20, 128, 75, 0.95));
  }
  body.dark-mode .auth-card h1 { color: #ffffff; }
  body.dark-mode .auth-card .subtitle { color: #a0a0a0; }
  body.dark-mode .input-group-custom label { color: #c0c0c0; }
  body.dark-mode .auth-card {
    background: rgba(42, 51, 72, 0.88);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35), 0 0 0 1px rgba(255, 255, 255, 0.08);
  }
  body.dark-mode .input-with-icon input {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.22);
  }

</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="logo-section">
  <h2>üîê KeepIT</h2>
</div>

<div class="auth-container">
  <div class="auth-card">
      <h1>Sign Up</h1>
      <p class="subtitle">
        Create your account to get started
      </p>

      <% if (error) { %>
        <div class="alert alert-warning" role="alert"><%= error %></div>
      <% } %>
      
      <form action="/register" method="POST">
        <div class="input-group-custom">
          <label>Full Name</label>
          <div class="input-with-icon">
            <i class="fas fa-user"></i>
            <input type="text" name="name" required placeholder="Jane Doe">
          </div>
        </div>
        
        <div class="row-custom">
          <div class="input-group-custom">
            <label>Email Address</label>
            <div class="input-with-icon">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" required placeholder="you@example.com">
            </div>
          </div>
          
          <div class="input-group-custom">
            <label>Password</label>
            <div class="input-with-icon">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
            </div>
          </div>
        </div>
        
        <div class="input-group-custom">
          <label>Role</label>
          <div class="input-with-icon">
            <i class="fas fa-user-tag"></i>
            <select name="role" required>
              <option value="customer" selected>Customer</option>
              <option value="provider">Provider</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <p class="form-note">Choose admin only for trusted accounts (you can change later).</p>
        </div>
        
        <button type="submit" class="btn-register">Create Account</button>
      </form>
      
      <div class="login-link">
        Already have an account? <a href="/login">Login Now</a>
      </div>
  </div>
</div>

<%- include("partials/footer") %>
