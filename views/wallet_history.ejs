<%- include("partials/header", { title: "Wallet History", bodyClass: "dashboard-bg" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Wallet History</h3>
    <a href="/wallet" class="btn btn-outline-primary btn-sm">Back to Wallet</a>
  </div>

  <div class="row g-4">
    <div class="col-lg-12">
      <!-- Wallet Summary -->
      <div class="card shadow-soft mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <div class="text-center">
                <div class="text-muted">Current Balance</div>
                <div style="font-size: 2rem; font-weight: bold; margin: 0.5rem 0;">
                  SGD $<%= Number(balance).toFixed(2) %>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center">
                <div class="text-muted">Total Transactions</div>
                <div style="font-size: 2rem; font-weight: bold; margin: 0.5rem 0;">
                  <%= transactions ? transactions.length : 0 %>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center">
                <a href="/wallet/topup" class="btn btn-primary mt-3">
                  <i class="bi bi-plus"></i> Add Funds
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Transaction History Table -->
      <div class="card shadow-soft">
        <div class="card-header bg-light">
          <h5 class="card-title mb-0">All Transactions</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Date</th>
                  <th>Type</th>
                  <th>Description</th>
                  <th class="text-end">Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% if (transactions && transactions.length > 0) { %>
                  <% transactions.forEach(tx => { %>
                    <tr>
                      <td>
                        <strong><%= tx.created_at_display %></strong>
                        <br>
                        <small class="text-muted"><%= tx.created_at_time %></small>
                      </td>
                      <td>
                        <% if (tx.type === 'topup') { %>
                          <span class="badge bg-success">‚¨ÜÔ∏è Top-up</span>
                        <% } else if (tx.type === 'purchase') { %>
                          <span class="badge bg-warning">‚¨áÔ∏è Purchase</span>
                        <% } else { %>
                          <span class="badge bg-info">üîÑ Refund</span>
                        <% } %>
                      </td>
                      <td>
                        <div class="fw-semibold"><%= tx.description %></div>
                        <% if (tx.status) { %>
                          <small class="text-muted"><%= tx.status.charAt(0).toUpperCase() + tx.status.slice(1) %></small>
                        <% } %>
                      </td>
                      <td class="text-end fw-semibold <%= tx.type === 'purchase' ? 'text-danger' : 'text-success' %>">
                        <%= tx.sign %>SGD $<%= tx.amount_display %>
                      </td>
                      <td>
                        <% if (tx.status === 'completed') { %>
                          <span class="badge bg-success">Completed</span>
                        <% } else if (tx.status === 'pending') { %>
                          <span class="badge bg-warning">Pending</span>
                        <% } else if (tx.status === 'failed') { %>
                          <span class="badge bg-danger">Failed</span>
                        <% } else { %>
                          <span class="badge bg-secondary"><%= tx.status %></span>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="5" class="text-center py-5 text-muted">
                      <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                      <p class="mt-2">No transaction history</p>
                      <a href="/wallet/topup" class="btn btn-sm btn-primary">Start by adding funds</a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Info Box -->
      <div class="alert alert-info mt-4">
        <h6 class="alert-heading">‚ÑπÔ∏è Transaction Types</h6>
        <ul class="mb-0 small">
          <li><strong>Top-up</strong> - Money added to your wallet</li>
          <li><strong>Purchase</strong> - Money spent on storage bookings</li>
          <li><strong>Refund</strong> - Money returned from cancelled bookings</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
