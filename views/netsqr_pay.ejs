<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>NETS QR Payment</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

  <div class="container py-4">
    <div class="page-header mb-3">
      <h2 class="mb-0">NETS QR Payment</h2>
      <p class="text-muted mb-0">Scan the QR code to complete your payment.</p>
    </div>

    <div class="row g-3">
      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-2">Amount</h5>
            <div class="display-6 text-success mb-3">$<%= Number(totalAmount).toFixed(2) %></div>

            <div class="text-center p-3 bg-white rounded border">
              <img src="<%= qrCodeDataUrl %>" alt="NETS QR" style="max-width: 320px; width: 100%;">
            </div>

            <div class="alert alert-info mt-3 mb-0">
              Keep this page open. Weâ€™ll auto-detect payment and redirect you to your invoice.
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Payment Status</h5>
            <p class="text-muted">Invoice #<%= invoiceId %></p>

            <div id="statusBox" class="alert alert-warning">
              Waiting for payment...
            </div>

            <div class="d-flex gap-2">
              <a class="btn btn-outline-secondary" href="/cart">Back to Cart</a>
              <a class="btn btn-outline-primary" href="/payment">Change Payment Method</a>
            </div>

            <hr>
            <small class="text-muted">
              If you are using a webhook, configure your NETS Developer Portal callback URL to:
              <code>/netsqr/webhook</code> (via ngrok in local dev).
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  (function() {
    const invoiceId = <%= invoiceId %>;
    const statusBox = document.getElementById('statusBox');

    async function poll() {
      try {
        const res = await fetch(`/netsqr/status/${invoiceId}`, { headers: { 'Accept': 'application/json' } });
        const data = await res.json();
        if (!data.ok) return;

        if (data.status === 'PAID') {
          statusBox.className = 'alert alert-success';
          statusBox.textContent = 'Payment received! Redirecting...';
          setTimeout(() => { window.location.href = `/invoice/${invoiceId}`; }, 800);
          return;
        }

        if (data.status === 'FAILED' || data.status === 'CANCELLED') {
          statusBox.className = 'alert alert-danger';
          statusBox.textContent = 'Payment not completed. You can change your payment method.';
          return;
        }

        // still pending
        statusBox.className = 'alert alert-warning';
        statusBox.textContent = 'Waiting for payment...';
      } catch (e) {
        // ignore transient errors
      } finally {
        setTimeout(poll, 2500);
      }
    }

    poll();
  })();
</script>

</body>
</html>
