<%- include("partials/header", { title: "Provider KYC" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5" style="max-width:720px;">
  <h3 class="mb-1">KYC Verification</h3>
  <div class="small-muted mb-4">Required to list storage units (AML/KYC compliance).</div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <div class="card shadow-soft p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <div class="fw-semibold">Current status</div>
      <% if (!kyc) { %>
        <span class="badge bg-warning text-dark">NOT SUBMITTED</span>
      <% } else { %>
        <span class="badge <%= kyc.status === 'APPROVED' ? 'bg-success' : (kyc.status === 'REJECTED' ? 'bg-danger' : 'bg-warning text-dark') %>"><%= kyc.status %></span>
      <% } %>
    </div>
    <div class="small-muted mt-2">Admin review is required before you can create listings.</div>
  </div>

  <div class="card shadow-soft p-4">
    <h5 class="mb-3">Submit / Update KYC</h5>
    <form method="POST" action="/provider/kyc">
      <div class="mb-3">
        <label class="form-label">Full name (as per ID)</label>
        <input class="form-control" name="full_name" required value="<%= (kyc && kyc.full_name) || '' %>">
      </div>

      <div class="row g-3">
        <div class="col-md-4">
          <label class="form-label">ID Type</label>
          <select class="form-select" name="id_type" required>
            <option value="NRIC" <%= (kyc && kyc.id_type === 'NRIC') ? 'selected' : '' %>>NRIC</option>
            <option value="Passport" <%= (kyc && kyc.id_type === 'Passport') ? 'selected' : '' %>>Passport</option>
            <option value="FIN" <%= (kyc && kyc.id_type === 'FIN') ? 'selected' : '' %>>FIN</option>
          </select>
        </div>
        <div class="col-md-8">
          <label class="form-label">ID Number</label>
          <input class="form-control" name="id_number" required value="<%= (kyc && kyc.id_number) || '' %>">
        </div>
      </div>

      <button class="btn btn-dark w-100 mt-4">Submit for Review</button>
    </form>
  </div>
</div>

<%- include("partials/footer") %>
