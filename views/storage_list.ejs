<%- include("partials/header", { title: "Browse Storage" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Browse Storage</h3>
  </div>

  <div class="card shadow-soft p-3 mb-4">
    <form method="GET" action="/storage" class="row g-2 align-items-end">
      <div class="col-md-4">
        <label class="form-label">Search</label>
        <input class="form-control" name="q" value="<%= (filters && filters.q) || '' %>" placeholder="title, location, description">
      </div>
      <div class="col-md-2">
        <label class="form-label">Type</label>
        <select class="form-select" name="type">
          <option value="" <%= !filters || !filters.type ? 'selected' : '' %>>All</option>
          <option value="physical" <%= filters && filters.type === 'physical' ? 'selected' : '' %>>Physical</option>
          <option value="digital" <%= filters && filters.type === 'digital' ? 'selected' : '' %>>Digital</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Size</label>
        <select class="form-select" name="size">
          <option value="" <%= !filters || !filters.size ? 'selected' : '' %>>All</option>
          <option value="Small" <%= filters && filters.size === 'Small' ? 'selected' : '' %>>Small</option>
          <option value="Medium" <%= filters && filters.size === 'Medium' ? 'selected' : '' %>>Medium</option>
          <option value="Large" <%= filters && filters.size === 'Large' ? 'selected' : '' %>>Large</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Max $/day</label>
        <input class="form-control" name="priceMax" type="number" step="0.01" value="<%= (filters && filters.priceMax) || '' %>">
      </div>
      <div class="col-md-2 d-grid">
        <button class="btn btn-primary">Apply</button>
      </div>
    </form>
  </div>

  <div class="row g-4">
    <% if (!storage || storage.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-warning">No storage listings matched your filters.</div>
      </div>
    <% } %>

    <% storage.forEach(s => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-soft p-3">
          <div class="d-flex justify-content-between">
            <h5 class="fw-bold mb-1"><%= s.title %></h5>
            <span class="badge bg-dark"><%= (s.storage_type || 'physical').toUpperCase() %></span>
          </div>

          <p class="mb-1 small-muted"><strong>Size:</strong> <%= s.size %></p>
          <p class="mb-1 small-muted"><strong>Location:</strong> <%= s.location || 'N/A' %></p>
          <p class="mb-1 small-muted"><strong>Availability:</strong> <%= s.available_units %>/<%= s.total_units %> units</p>

          <div class="d-flex align-items-center justify-content-between mt-2">
            <div>
              <div class="fw-bold text-success">$<%= s.dynamic_price_per_day || (s.price_per_day || s.price) %> / day</div>
              <div class="small-muted">Base: $<%= s.price_per_day || s.price %> / day</div>
            </div>
            <div class="text-end">
              <div class="fw-semibold"><%= Number(s.avg_rating || 0).toFixed(1) %>â˜…</div>
              <div class="small-muted">(<%= s.review_count || 0 %>)</div>
            </div>
          </div>

          <div class="mt-3 d-grid gap-2">
            <a href="/storage/<%= s.storage_id %>" class="btn btn-outline-dark">View Details</a>

            <% if (user && user.role === 'customer') { %>
              <form action="/cart/add" method="POST" class="d-grid">
                <input type="hidden" name="storage_id" value="<%= s.storage_id %>">
                <button type="submit" class="btn btn-primary" <%= (s.available_units || 0) <= 0 ? 'disabled' : '' %>>Add to Cart</button>
              </form>
            <% } else if (!user) { %>
              <a href="/login" class="btn btn-outline-primary">Login to Rent</a>
            <% } else { %>
              <button class="btn btn-secondary" disabled>Not available for this role</button>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
