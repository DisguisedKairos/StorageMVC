<%- include("partials/header", { title: "Sales Reports", bodyClass: "dashboard-bg" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Sales Performance Reports</h3>
    <a href="/admin/dashboard" class="btn btn-outline-primary btn-sm">Back to Dashboard</a>
  </div>

  <!-- ===== Charts ===== -->
  <div class="row g-4 mb-4">
    <div class="col-lg-6">
      <div class="card shadow-sm border-0 rounded-4 p-3">
        <h6 class="mb-3">Monthly Revenue (Last 12 Months)</h6>
        <canvas id="monthlyRevenueChart" height="160"></canvas>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card shadow-sm border-0 rounded-4 p-3">
        <h6 class="mb-3">Revenue by Payment Method</h6>
        <canvas id="revenueByMethodChart" height="160"></canvas>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card shadow-sm border-0 rounded-4 p-3">
        <h6 class="mb-3">Top Storage Spaces (by Revenue)</h6>
        <canvas id="topStorageChart" height="140"></canvas>
      </div>
    </div>
  </div>



  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Revenue</div>
        <div class="fs-4 fw-semibold">$<%= Number(overview.total_revenue || 0).toFixed(2) %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Bookings</div>
        <div class="fs-4 fw-semibold"><%= overview.total_bookings || 0 %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Paid Bookings</div>
        <div class="fs-4 fw-semibold"><%= overview.paid_bookings || 0 %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Customers</div>
        <div class="fs-4 fw-semibold"><%= overview.total_customers || 0 %></div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card shadow-soft">
        <div class="card-body">
          <h5 class="card-title mb-3">Revenue by Payment Method</h5>
          <div class="table-responsive">
            <table class="table table-striped mb-0">
              <thead class="table-light">
                <tr>
                  <th>Method</th>
                  <th class="text-end">Payments</th>
                  <th class="text-end">Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% if (!byMethod || byMethod.length === 0) { %>
                  <tr><td colspan="3" class="text-center text-muted py-3">No data.</td></tr>
                <% } else { %>
                  <% byMethod.forEach(r => { %>
                    <tr>
                      <td><%= r.method || "N/A" %></td>
                      <td class="text-end"><%= r.payments %></td>
                      <td class="text-end">$<%= Number(r.revenue || 0).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card shadow-soft">
        <div class="card-body">
          <h5 class="card-title mb-3">Top Storage (Revenue)</h5>
          <div class="table-responsive">
            <table class="table table-striped mb-0">
              <thead class="table-light">
                <tr>
                  <th>Storage</th>
                  <th class="text-end">Bookings</th>
                  <th class="text-end">Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% if (!topStorage || topStorage.length === 0) { %>
                  <tr><td colspan="3" class="text-center text-muted py-3">No data.</td></tr>
                <% } else { %>
                  <% topStorage.forEach(r => { %>
                    <tr>
                      <td><%= r.title || ("Storage #" + r.storage_id) %></td>
                      <td class="text-end"><%= r.bookings || 0 %></td>
                      <td class="text-end">$<%= Number(r.revenue || 0).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-soft">
        <div class="card-body">
          <h5 class="card-title mb-3">Monthly Revenue (Last 12 Months)</h5>
          <div class="table-responsive">
            <table class="table table-striped mb-0">
              <thead class="table-light">
                <tr>
                  <th>Month</th>
                  <th class="text-end">Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% if (!monthly || monthly.length === 0) { %>
                  <tr><td colspan="2" class="text-center text-muted py-3">No data.</td></tr>
                <% } else { %>
                  <% monthly.forEach(r => { %>
                    <tr>
                      <td><%= r.month %></td>
                      <td class="text-end">$<%= Number(r.revenue || 0).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
  const monthly = <%- JSON.stringify(monthly || []) %>;
  const byMethod = <%- JSON.stringify(byMethod || []) %>;
  const topStorage = <%- JSON.stringify(topStorage || []) %>;

  // Monthly revenue (sort ascending by month)
  const monthlySorted = [...monthly].sort((a,b) => String(a.month).localeCompare(String(b.month)));
  const mLabels = monthlySorted.map(r => r.month);
  const mValues = monthlySorted.map(r => Number(r.revenue || 0));

  const ctx1 = document.getElementById('monthlyRevenueChart');
  if (ctx1) {
    new Chart(ctx1, {
      type: 'line',
      data: { labels: mLabels, datasets: [{ label: 'Revenue', data: mValues, tension: 0.3 }] },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });
  }

  // Revenue by method
  const methodLabels = byMethod.map(r => r.method || 'Unknown');
  const methodValues = byMethod.map(r => Number(r.revenue || 0));
  const ctx2 = document.getElementById('revenueByMethodChart');
  if (ctx2) {
    new Chart(ctx2, {
      type: 'bar',
      data: { labels: methodLabels, datasets: [{ label: 'Revenue', data: methodValues }] },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });
  }

  // Top storage by revenue
  const topLabels = topStorage.map(r => r.title || ('Storage #' + r.storage_id));
  const topValues = topStorage.map(r => Number(r.revenue || 0));
  const ctx3 = document.getElementById('topStorageChart');
  if (ctx3) {
    new Chart(ctx3, {
      type: 'bar',
      data: { labels: topLabels, datasets: [{ label: 'Revenue', data: topValues }] },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });
  }
</script>

<%- include("partials/footer") %>

