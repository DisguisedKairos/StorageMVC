<%- include("partials/header", { title: "Manage Users" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Manage Users</h3>
    <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm">Back</a>
  </div>

    <% if (typeof error !== 'undefined' && error.length) { %>
      <div class="alert alert-danger">
        <% error.forEach(function(m){ %><div><%= m %></div><% }) %>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(m){ %><div><%= m %></div><% }) %>
      </div>
    <% } %>

    <div class="row">
      <% users.forEach(function(u){ %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= u.name || ('user-' + u.user_id) %></h5>
              <p class="card-text text-muted"><%= u.email || '' %></p>
              <p class="card-text">Role: <strong><%= u.role || 'user' %></strong></p>

              <div class="mt-auto d-flex gap-2">
                <a href="/admin/users/edit/<%= u.user_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                <a href="/admin/users/delete/<%= u.user_id %>" onclick="return confirm('Delete user <%= (u.email || u.user_id) %>?')" class="btn btn-sm btn-outline-danger">Delete</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
