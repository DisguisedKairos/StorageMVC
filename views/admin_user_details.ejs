<!DOCTYPE html>
<html>
<head>
    <title>Manage Users</title>
    <%- include("partials/header", { title: "Edit Storage" }) %>
    <%- include("partials/navbar", { user: user }) %>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Manage Users</h2>
      <a href="/storage" class="btn btn-outline-secondary">Back</a>
    </div>

    <% if (typeof error !== 'undefined' && error.length) { %>
      <div class="alert alert-danger">
        <% error.forEach(function(m){ %><div><%= m %></div><% }) %>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(m){ %><div><%= m %></div><% }) %>
      </div>
    <% } %>

    <div class="row">
      <% users.forEach(function(u){ %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= u.name || u.Name || u.name || ('user-'+u.id) %></h5>
              <p class="card-text text-muted"><%= u.email || '' %></p>
              <p class="card-text">Role: <strong><%= u.role || 'user' %></strong></p>

              <div class="mt-auto d-flex gap-2">
                <a href="/user/<%= u.id %>" class="btn btn-sm btn-outline-primary">View / Edit</a>

                

                <a href="/user/<%= u.id %>/delete" onclick="return confirm('Delete user <%= (u.username||u.email) %>?')" class="btn btn-sm btn-outline-danger">Delete</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
