<%- include("partials/header", { title: "My Cart" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">My Cart</h3>
    <a href="/storage" class="btn btn-outline-primary btn-sm">Continue Browsing</a>
  </div>

  <% if (!items || items.length === 0) { %>
    <div class="card shadow-soft p-4">
      <p class="mb-0">Your cart is empty.</p>
    </div>
  <% } else { %>
    <div class="card shadow-soft">
      <div class="table-responsive">
        <table class="table table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th>Storage</th>
              <th>Location</th>
              <th style="width:160px;">Quantity</th>
              <th class="text-end">Price/Day</th>
              <th class="text-end">Subtotal</th>
              <th style="width:120px;"></th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(i => { %>
              <tr>
                <td>
                  <div class="fw-semibold"><%= i.title %></div>
                  <div class="small text-muted"><%= i.size %></div>
                </td>
                <td><%= i.location || 'N/A' %></td>
                <td>
                  <form action="/cart/update" method="POST" class="d-flex gap-2">
                    <input type="hidden" name="storage_id" value="<%= i.storage_id %>">
                    <input class="form-control form-control-sm" type="number" name="quantity" min="1" value="<%= i.quantity %>">
                    <button class="btn btn-primary btn-sm" type="submit">Update</button>
                  </form>
                </td>
                <td class="text-end">$<%= Number(i.unit_price).toFixed(2) %></td>
                <td class="text-end">$<%= (Number(i.unit_price) * Number(i.quantity)).toFixed(2) %></td>
                <td class="text-end">
                  <form action="/cart/remove" method="POST">
                    <input type="hidden" name="storage_id" value="<%= i.storage_id %>">
                    <button class="btn btn-outline-danger btn-sm" type="submit">Remove</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="d-flex justify-content-end mt-3">
      <div class="card shadow-soft p-3" style="min-width: 280px;">
        <div class="d-flex justify-content-between">
          <div class="fw-semibold">Total</div>
          <div class="fw-bold">$<%= Number(total).toFixed(2) %></div>
        </div>
        <div class="small text-muted mt-1">(Total based on price per day)</div>
      
        <form action="/checkout" method="POST" class="mt-3">
          <button class="btn btn-primary w-100" type="submit">Proceed to Checkout</button>
        </form>
</div>
    </div>
  <% } %>
</div>

<%- include("partials/footer") %>
