<%- include("partials/header", { title: "Admin Dashboard" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Admin Dashboard</h3>
    <a href="/admin/reports" class="btn btn-outline-primary btn-sm">View Reports</a>
  </div>

  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Storage</div>
        <div class="fs-4 fw-semibold"><%= stats.totalStorage || 0 %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Users</div>
        <div class="fs-4 fw-semibold"><%= stats.totalUsers || 0 %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Bookings</div>
        <div class="fs-4 fw-semibold"><%= stats.totalBookings || 0 %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-soft text-center p-3">
        <div class="text-muted">Total Revenue</div>
        <div class="fs-4 fw-semibold">$<%= Number(stats.totalRevenue || 0).toFixed(2) %></div>
      </div>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-md-6">
      <div class="card shadow-soft">
        <div class="card-body">
          <h5 class="card-title">Quick Links</h5>
          <div class="d-grid gap-2">
            <a href="/admin/users" class="btn btn-outline-secondary">Manage Users</a>
            <a href="/admin/bookings" class="btn btn-outline-secondary">View Bookings & Payments</a>
            <a href="/admin/storage" class="btn btn-outline-secondary">Manage Storage</a>
            <a href="/admin/reports" class="btn btn-outline-secondary">Sales Reports</a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card shadow-soft">
        <div class="card-body">
          <h5 class="card-title">Paid Bookings</h5>
          <p class="mb-0">Completed payments: <strong><%= stats.paidBookings || 0 %></strong></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
